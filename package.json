{
  "name": "a11y-codelens",
  "displayName": "a11y-codelens",
  "description": "Verificar acessibilidade em tempo de desenvolvimento",
  "version": "0.0.1",
  "publisher": "edvaldoafonso",
  "engines": {
    "vscode": "^1.99.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eadafonso/a11y-codelens.git"
  },
  "icon": "icon/acessibilidade.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:html",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
"contributes": {
  "commands": [
    {
      "command": "a11y-codelens.checkAccessibility",
      "title": "üîç Verificar Acessibilidade"
    }
  ],
  "languages": [
    { "id": "html", "extensions": [".html"] },
    { "id": "javascriptreact", "extensions": [".jsx"] },
    { "id": "typescriptreact", "extensions": [".tsx"] }
  ],
  "keybindings": [
    {
      "command": "a11y-codelens.checkAccessibility",
      "key": "cmd+shift+a",
      "mac": "cmd+shift+a",
      "linux": "ctrl+shift+a",
      "win": "ctrl+shift+a",
      "when": "editorTextFocus"
    }
  ]
},

"menus": {
  "editor/title": [
    {
      "command": "a11y-codelens.checkAccessibility",
      "when": "resourceLangId == html || resourceLangId == javascriptreact || resourceLangId == typescriptreact",
      "group": "navigation"
    }
  ]
},
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
